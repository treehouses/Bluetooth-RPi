<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Change Pi Password"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-29dp" />

    <Button
        android:id="@+id/btnTreehouses"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Treehouses help"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePass"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnDocker"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Docker ps"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnTreehousesDetect"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnTreehousesDetect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Treehouses Detectrpi"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnTreehouses"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnExpand"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Expand File System"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnDocker"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnVncOn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="vnc on"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnDocker"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnVncStatus"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="vnc status"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnDocker"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Clear"
        android:theme="@style/PrimaryButton"
        app:layout_constraintTop_toBottomOf="@+id/btnDocker"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>