    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutHotspotPW"
        android:layout_width="599dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutHotspotESSID"
        app:passwordToggleDrawable="@drawable/passwordtoggle"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/md_blue_500">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hotspotPassword"
            android:layout_width="568dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
