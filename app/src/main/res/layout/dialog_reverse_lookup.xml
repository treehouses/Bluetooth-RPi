<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:background="@drawable/ic_feedback_back"
    android:theme="@style/CardTheme">

    <TextView
        android:id="@+id/reverse_lookup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Reverse Lookup"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/reverse_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/reverse_lookup">

        <LinearLayout
            android:id="@+id/reverseLookupBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/reverText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calling....."
                android:textSize="20sp"
                android:textColor="@color/daynight_textColor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>